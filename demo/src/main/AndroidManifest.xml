<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.owen.demo.adapter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".listview.single.SingleLayoutLVActivity"/>
        <activity android:name=".listview.multiple.MultipleLayoutLVActivity"/>
        <activity android:name=".recyclerview.single.SingleLayoutRVActivity"/>
        <activity android:name=".recyclerview.multiple.MultipleLayoutRVActivity"/>
    </application>

</manifest>